{

  "manifest_version": 2,
  "author": ["Валерий Романов", "Никита Чеботарёв"],
  "name": "Stream Spy",
  "version": "1.0",

  "description": "Расширение для уведомлений о стримах на Twitch.tv",

  "homepage_url" : "https://github.com/i-madness/StreamSpy",

  "background": {
    "scripts": ["jquery-3.1.1.min.js", "twitch-api-commons.js", "streamspy.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["notifications", "storage"],

  "icons" : {
      "48": "icons/logo-48.png",
      "96": "icons/logo-96.png"
  }

}